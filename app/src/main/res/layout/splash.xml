<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_blue"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/eulex" />

    <TextView
        android:id="@+id/Naslov5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:text="English/Serbian Glossary"
        android:textColor="@color/White"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/textNaslov6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:contentDescription="16dp"
        android:text="Made by: Zoran Dimitrijevic"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textNaslov7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Version: 1.1"
        android:textColor="@color/White"
        android:textSize="14dp"
        android:textStyle="italic" />

</LinearLayout>
